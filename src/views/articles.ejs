<%if (articles.length > 0) {%>
<div id="headline-articles" class="card-columns">
  <%for (let article of articles) {%>
  <div class="card">
    <div class="card-body">
      <% if (article.urlToImage && article.urlToImage !== 'null') {%><img class="card-img-top" src="<%=article.urlToImage%>"
        alt="Article Image"><%} else ''%>
      <h5 class="card-title"><%=article.title%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%=article.source%></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%=article.publishDate%></h6>
      <p class="card-text"><%=article.description%></p>
      <a href="<%=article.url%>" target="_blank" class="card-link">Read Full Article</a>
    </div>
  </div>
  <%}%>
  <%} else {%>
  <h3>No articles to render</h3>
  <%}%>